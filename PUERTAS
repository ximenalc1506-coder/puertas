      flex-wrap: wrap;
    }

    .filters button {
      padding: 8px 14px;
      border: none;
      background: #ddd;
      cursor: pointer;
    }

    .filters button:hover {
      background: #bbb;
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 10px;
      padding: 20px;
    }

    .item img {
      width: 100%;
