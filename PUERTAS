<body>

<header>
  <h1>Archivo de Puertas</h1>
</header>

<div class="filters">
  <button onclick="filterItems('all')">Todas</button>
  <button onclick="filterItems('blanca')">Blancas</button>
  <button onclick="filterItems('negra')">Negras</button>
  <button onclick="filterItems('madera')">Madera</button>
</div>

<section class="gallery">
  <div class="item blanca">
    <img src="images/puerta1.jpg">
    <p>Puerta blanca</p>
  </div>

  <div class="item negra">
    <img src="images/puerta2.jpg">
    <p>Puerta negra</p>
  </div>

  <div class="item madera">
    <img src="images/puerta3.jpg">
    <p>Puerta de madera</p>
  </div>
</section>

<script>
  function filterItems(category) {
    const items = document.querySelectorAll('.item');
    items.forEach(item => {
      if (category === 'all' || item.classList.contains(category)) {
        item.style.display = 'block';
      } else {
        item.style.display = 'none';
      }
    });
  }
</script>

